<% if flash[:error] %>
<ul class="errors">
    <% flash[:error].each do |message| %>
    <li><%= message %></li>
    <% end %>
</ul>
<% end %>
<div class="room_show">
    <div class="row">
        <div class="flex">
            <div class="room_show_content">
                <%= image_tag @room.room_image.url,class:"room_show_image"%>
                <div class="room_detile">
                    <div class="room_detile_icon">
                        <div class="current_user_image"><%= image_tag "noimage.jpg" %></div>
                    </div>
                    <div class="room_detile_profile">
                        <p class="profile_name"><%= @room.name %></p>
                        <p class="profile_address"><%= @room.address %></p>
                    </div>
                </div>
                <p class="room_detile_introduction"><%= @room.introduction %></p>
            </div>
        </div>
        <div class="room_show_nav ">
            <h4 class="price_icon room_show_price"><%= "#{@room.price} / 日" %></h4>
            <div class="room_show_date_select">
                <%= form_with url:reservation_confirmation_path , method: :get, local: true do |f| %>
                <%= f.hidden_field :user_id,value: @current_user.id %>
                <%= f.hidden_field :room_id,value: @room.id %>
                <%= f.label :start_date ,"開始日",class:'room_show_label' %>
                <%= f.date_field :start_date,class:"room_show_input mb_1"%>
                <%= f.label :end_date ,"終了日",class:'room_show_label' %>
                <%= f.date_field :end_date,class:"update_form mb_1"%>
                <%= f.label :number ,"人数",class:'room_show_label' %>
                <%= f.number_field :number,class:"update_form mb_1",min:1%>
                <%= f.submit "予約する",class:'form_btn edit mt_zero' %>
                <%end%>
            </div>
        </div>
    </div>
</div>
