<!DOCTYPE html>
<html>

<head>
  <title>PoteShare</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
  <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
</head>

<body>
  <div class="header">
    <div class="header_left_nav">
      <%= link_to image_tag("logo.png"), "/" %>
      <%= form_with url: search_path, method: :get , local: true do |f| %>
      <div class="row">
        <div class="search_box">
          <%= f.text_field :search, placeholder:"エリア",class:"header_search"%>
          <i class="fas fa-map-marker-alt"></i>
        </div>
        <%= f.submit "",class:'btn edit hide' %>
        <%end%>
        <%= form_with url: keyword_search_path, method: :get , local: true do |f| %>
        <div class="search_box">
          <%= f.text_field :keyword, placeholder:"キーワード",class:"header_search"%>
          <i class="fas fa-search"></i>
        </div>
        <%= f.submit "",class:'btn edit hide' %>
        <%end%>
      </div>
    </div>
    <div class="header_right_nav">
      <div class="nav_item">
        <% if @current_user%>
        <span class="current_user_name"><%= @current_user.name%></span>
        <div id="user_image">
          <%= render "shared/user_image", obj: @current_user %>
        </div>

        <ul class="header_nav_menu" id="nav_menu">
          <li><%= link_to 'ルーム登録', '/rooms/new' %></li>
          <li><%= link_to '予約済みルーム一覧', '/reservations' %></li>
          <li><%= link_to '登録済みルーム一覧', '/rooms' %></li>
          <li><%= link_to '設定', '/users/account' %></li>
          <li><%= link_to 'ログアウト', '/logout' , method: :post %></li>
        </ul>

        <% else %>
        <%= link_to("ログイン", "/users/sign_in", {class: "btn sign_in"}) %>
        <%= link_to("新規登録", "/users/sign_up", {class: "btn sign_up"}) %>
        <%end%>
      </div>
    </div>
  </div>
  <% if flash[:notice] %>
  <p class="notice"><%= flash[:notice] %></p>
  <% end %>
  <% if flash[:alert] %>
  <p class="alert"><%= flash[:alert] %></p>
  <% end %>

  <%= yield %>

  <div class="footer">
    <p>© 2022 POTEPAN.INC.</p>
  </div>
</body>

</html>
