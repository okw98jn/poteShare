<div class="top">
    <div class="top_form">
        <p class="top_from_title">Potepan Shareでまだ体験したことのない旅をしよう</p>
        <%= form_with url: search_path, method: :get , local: true do |f| %>
        <%= f.label :search ,"エリア",class:"area_label" %>
        <%= f.text_field :search, placeholder:"大阪",class:"area_input"%>
        <%= f.submit "探す",class:'btn edit area_btn' %>
        <%end%>
    </div>
    <div class="top_main">
        <div class="top_container">
        </div>
    </div>
    <div class="top_container">
        <div class="area_select">
            <h2 class="section_title">おすすめのエリア</h2>
            <div class="area_item">
                <div class="item">
                    <span class="area_item_span">東京</span>
                    <%= link_to image_tag("img_tokyo"), search_path(search:"東京") %>
                </div>
                <div class="item">
                    <span class="area_item_span">大阪</span>
                    <%= link_to image_tag("img_osaka"), search_path(search:"大阪") %>
                </div>
                <div class="item">
                    <span class="area_item_span">京都</span>
                    <%= link_to image_tag("img_kyoto"), search_path(search:"京都") %>
                </div>
                <div class="item">
                    <span class="area_item_span">札幌</span>
                    <%= link_to image_tag("img_sapporo"), search_path(search:"札幌") %>
                </div>
            </div>
        </div>

    </div>
</div>
