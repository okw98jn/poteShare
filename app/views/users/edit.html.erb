<div class="edit_container">
    <div class="edit_frame">
        <h2 class="edit_title">アカウント編集</h2>
        <div class="edit_inner">
            <%= form_with  local: true do |f| %>
            <div class="form_group">
                <%= f.label :password ,"変更後パスワード（変更する場合のみ入力）"%>
                <%= f.password_field :password,class:"update_form"%>
            </div>
            <div class="form_group">
                <%= f.label :password_confirmation ,"パスワード確認用（変更する場合のみ入力）"%>
                <%= f.password_field :password_confirmation,class:"update_form"%>
            </div>

            <div class="form_group">
                <%= f.submit "更新" ,class:"form_btn edit_btn" %>
                <%= link_to("戻る","/users/account",class:"form_btn back_btn")%>
            </div>
            <% end %>
        </div>
    </div>
</div>
