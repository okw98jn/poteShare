<div class="container sign_in_container">
    <p>新しいアカウントを作成</p>
    <% if @error_message %>
    <span class="error_message">
        <%= @error_message %>
    </span>
    <% end %>
    <%= form_with url:login_path , local: true, class: "form" do |f| %>

    <div class="form_item">
        <label class="required_signup"></label>
        <%= f.text_field :email,placeholder:"メールアドレス",class:"form_input",type:"email",value:@email %>
    </div>
    <div class="form_item">
        <label class="required_signup"></label>
        <%= f.password_field :password,placeholder:"パスワード(6文字以上)",class:"form_input" %>
    </div>

    <%= f.submit "ログイン" ,class:"form_btn" %>
    <%= link_to("アカウント新規作成","/users/new",class:"login_link")%>
    <% end %>
</div>
